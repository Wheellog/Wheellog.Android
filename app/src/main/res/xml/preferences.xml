<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="@string/speed_preferences"
        android:title="@string/speed_settings_title"
        android:icon="@drawable/ic_speedometer_white_24dp"/>

    <Preference
        android:key="@string/log_preferences"
        android:title="@string/logs_settings_title"
        android:icon="@drawable/ic_show_chart_white_24dp"/>

    <Preference
        android:key="@string/alarm_preferences"
        android:title="@string/alarm_settings_title"
        android:icon="@drawable/ic_baseline_vibration_24"/>

    <Preference
        android:key="@string/watch_preferences"
        android:title="@string/watch_settings_title"
        android:icon="@drawable/ic_baseline_watch_24" />

    <Preference
        android:key="@string/wheel_settings"
		android:enabled="true"
        android:title="@string/wheel_settings_title"
        android:icon="@drawable/ic_wheel_white_24" />

    <Preference
        android:enabled="true"
        android:icon="@drawable/ic_baseline_explore_24"
        android:key="@string/trip_settings"
        android:title="@string/trip_settings_title" />

    <Preference
        android:title="@string/bug_report"
        app:icon="@drawable/ic_baseline_bug_report_24">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://github.com/Wheellog/Wheellog.Android/issues" />
    </Preference>

    <Preference
        android:enabled="true"
        android:icon="@drawable/ic_baseline_info_24"
        android:key="@string/about"
        android:title="@string/about_app_title" />
</PreferenceScreen>