<resources>

    <style name="OriginalTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColor">@color/wheelview_textblocks</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:divider">@color/divider</item>
        <item name="actionButtonStyle">@style/OriginalTheme.Toolbar.ActionButton</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorControlNormal">@color/divider</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="buttonStyle">@style/OriginalTheme.ButtonStyle</item>
        <item name="alertDialogTheme">@style/OriginalTheme.Dialog.Alert</item>
        <item name="popupMenuStyle">@style/OriginalTheme.PopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/OriginalTheme.PopupMenuStyle</item>
    </style>

    <style name="OriginalTheme.Transparent" parent="OriginalTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="OriginalTheme.Dialog.Alert" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/alert_bg</item>
        <item name="textColorAlertDialogListItem">@color/primary_dark</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textColorAlertDialogListItem">@color/primary_dark</item>
        <item name="editTextColor">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_dark</item>
        <item name="android:textColorSecondary">@color/primary_dark</item>
        <item name="colorControlNormal">@color/primary_dark</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/wheelview_text</item>
        <item name="colorAccent">@color/accent</item>
        <item name="buttonBarNegativeButtonStyle">@style/OriginalTheme.ButtonStyle.Alert</item>
        <item name="buttonBarNeutralButtonStyle">@style/OriginalTheme.ButtonStyle.Alert</item>
        <item name="buttonBarPositiveButtonStyle">@style/OriginalTheme.ButtonStylePositive</item>
        <item name="android:checkboxStyle">@style/OriginalTheme.CheckBoxStyle.Alert</item>
        <item name="checkboxStyle">@style/OriginalTheme.CheckBoxStyle.Alert</item>
        <item name="radioButtonStyle">@style/OriginalTheme.CheckBoxStyle.Alert</item>
        <item name="spinnerStyle">@style/Widget.AppCompat.Spinner.DropDown.ActionBar</item>
        <item name="popupMenuStyle">@style/OriginalTheme.PopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/OriginalTheme.PopupMenuStyle</item>
    </style>

    <style name="OriginalTheme.ButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/alert_button_text</item>
        <item name="backgroundTint">@color/alert_button_bg</item>
        <item name="backgroundTintMode">add</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="OriginalTheme.ButtonStyle.Alert" parent="@style/OriginalTheme.ButtonStyle">
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="OriginalTheme.ButtonStylePositive" parent="@style/OriginalTheme.ButtonStyle">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="OriginalTheme.CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/wheelview_textblocks</item>
    </style>

    <style name="OriginalTheme.CheckBoxStyle.Alert" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:tint">@color/primary_dark</item>
        <item name="colorControlNormal">@color/primary_dark</item>
        <item name="android:textColorSecondary">@color/primary_dark</item>
    </style>

    <style name="OriginalTheme.EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/wheelview_textblocks</item>
    </style>

    <style name="OriginalTheme.EditTextStyle.Alert" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="OriginalTheme.Toolbar.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="MultiSelectPref" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">left</item>
        <item name="layout_columnWeight">1</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="Stats" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">left</item>
        <item name="layout_columnWeight">1</item>
        <item name="android:textColor">#AAFFFFFF</item>
    </style>

    <style name="Stats.Title" parent="@style/Stats">
        <item name="android:textColor">#CCFFFFFF</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StatsBMS" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">left</item>
        <item name="layout_columnWeight">1</item>
        <item name="android:textColor">#AAFFFFFF</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="StatsBMS.Title" parent="@style/Stats">
        <item name="android:textColor">#CCFFFFFF</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LinePageIndicatorStyle">
        <item name="android:padding">5dp</item>
    </style>

    <style name="SettingStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:dividerHeight">3dp</item>
        <item name="actionButtonStyle">@style/OriginalTheme.Toolbar.ActionButton</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:colorBackground">@color/settings_bg</item>
        <item name="alertDialogTheme">@style/OriginalTheme.Dialog.Alert</item>
        <item name="popupMenuStyle">@style/OriginalTheme.PopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/OriginalTheme.PopupMenuStyle</item>
    </style>

    <style name="OriginalTheme.PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:itemBackground">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>
</resources>
