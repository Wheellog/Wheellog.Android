<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ib_actions_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/notifications_actions_text" />

    <ImageButton
        android:id="@+id/ib_connection"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/icon_connection"
        android:padding="10dp"
        android:src="@drawable/ic_action_wheel_grey" />

    <ImageButton
        android:id="@+id/ib_logging"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_action_logging_grey"
        android:contentDescription="@string/icon_logging" />

    <ImageButton
        android:id="@+id/ib_watch"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_action_watch_grey"
        android:contentDescription="@string/icon_watch" />

</LinearLayout >