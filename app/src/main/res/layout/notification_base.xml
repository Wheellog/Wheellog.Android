<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/status_bar_latest_event_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:tag="base">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="3dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_action_wheel_orange" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/icon"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:fontFamily="@font/prime"
        android:singleLine="true" />

    <TextView
        android:id="@+id/text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title"
        android:layout_gravity="top"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/icon"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:gravity="top"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/icon"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ib_actions_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/notifications_actions_text" />

        <ImageButton
            android:id="@+id/ib_connection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/icon_connection"
            android:src="@drawable/ic_action_wheel_grey" />

        <ImageButton
            android:id="@+id/ib_logging"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/icon_logging"
            android:src="@drawable/ic_action_logging_grey" />

        <ImageButton
            android:id="@+id/ib_watch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/icon_watch"
            android:src="@drawable/ic_action_watch_grey" />

        <ImageButton
            android:id="@+id/ib_beep"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/icon_beep"
            app:srcCompat="@drawable/ic_horn_32_gray" />

        <ImageButton
            android:id="@+id/ib_light"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/icon_light"
            app:srcCompat="@drawable/ic_sun_32_gray" />

    </LinearLayout>

</RelativeLayout>